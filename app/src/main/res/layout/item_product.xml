<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/bg_white">

    <ImageView
        android:padding="5dp"
        android:id="@+id/ivGambar"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:importantForAccessibility="no"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="INI NAMA"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/ivGambar"
        app:layout_constraintTop_toBottomOf="@+id/ivGambar" />

    <TextView
        android:id="@+id/tvNim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNama"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/ivGambar"
        android:fontFamily="@font/montserrat_bold"
        android:text="233307095"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/ivGambar"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tvKelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNim"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/ivGambar"
        android:fontFamily="@font/montserrat_bold"
        android:text="2D"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/ivGambar"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tvAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvKelas"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/ivGambar"
        android:fontFamily="@font/montserrat_bold"
        android:text="Paron, Ngawi"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/ivGambar"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

</RelativeLayout>