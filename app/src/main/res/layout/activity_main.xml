<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/shape1"
        android:layout_width="340dp"
        android:layout_height="780dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/shape1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto" />


    <ImageView
        android:id="@+id/foto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toTopOf="@+id/labelNama"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/yudha"
        tools:ignore="MissingConstraints"
        android:importantForAccessibility="no"/>

    <TextView
        android:id="@+id/labelNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAMA"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bagas Yudha Ardiansyah"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toBottomOf="@+id/labelNama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



    <TextView
        android:id="@+id/labelNIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIM"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama" />

    <TextView
        android:id="@+id/NIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="233307095"
        android:letterSpacing="0.1"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintTop_toBottomOf="@+id/labelNIM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/labelDeskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DESKRIPSI DIRI"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NIM" />

    <ScrollView
        android:layout_width="240dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toBottomOf="@+id/labelDeskripsi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal">

        <TextView
            android:paddingTop="10dp"
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_medium"
            android:text="Nama saya Bagas Yudha Ardiansyah. Saya lulusan SMK PGRI 1 Ngawi dan fokus ke Audio Visual dan juga Desain Grafis. Setelah lulus, saya memutuskan untuk melanjutkan di Program Studi Teknologi Informasi di Politeknik Negeri Madiun yang saat ini duduk di bangku semester 2. Aplikasi ini saya buat untuk memenuhi tugas mata kuliah Praktik Pemrograman Mobile. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas mollis, eros ut finibus blandit, ex mauris dictum magna, eleifend vestibulum nisl urna et felis. Vestibulum eu enim quis risus tristique mollis et in nisi. Integer cursus eu dui nec lacinia. Donec consequat nibh ut turpis auctor vehicula. Duis at euismod orci. Morbi quis sapien posuere, convallis lorem ac, euismod ante. Cras varius egestas lorem, a luctus nunc pharetra non. Nam justo leo, finibus consectetur velit ut, fringilla varius nulla. Nullam vehicula, risus non venenatis viverra, nisi mi suscipit ligula, eget malesuada lectus lorem nec diam. Phasellus ornare dictum erat sit amet iaculis."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp" />
    </ScrollView>

    <Button
        android:id="@+id/buttonGithub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buka Github"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>